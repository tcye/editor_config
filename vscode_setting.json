{
    "editor.renderIndentGuides": true,
    "workbench.iconTheme": "vscode-icons",
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "k"],
            "after": ["<esc>"]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["g", "_"]
        }
    ],
    "vim.useCtrlKeys": true
}